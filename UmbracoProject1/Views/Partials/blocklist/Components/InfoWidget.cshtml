@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.InfoWidget)Model.Content;
    
}

<div class="flex flex-col gap-4">
    <h2 class="text-[var(--clr-primary)] text-[1.375rem] font-semibold">@content.InfoTitle</h2>
    @if (content.InfoImage != null)
    {
        <img src="@content.InfoImage.Url()" />
    }
    <p class="text-body-text text-[0.875rem] font-normal">@content.InfoText</p>
</div>


<section class="bg-[#4f5955] rounded-[3px] p-6 relative mt-10">
    <img src="/Images/Mail.svg" alt="" class="absolute bottom-0 right-0 w-0  object-cover" />
    <div class="relative z-10">
        <h3 class=" font-semibold text-[#f2eddc] text-[22px] mb-2">
            How can we help you?
        </h3>

        <p class="font-normal text-white text-sm leading-6 mb-4">
            online support 24/7, we are here to help you
        </p>

        <div class="relative">
            <Input type="email" placeholder="E-mail address" class=" rounded-[3px] border-0 py-3 px-4 text-[#9C9EA6] font-normal italic w-full text-[13px]" />
            <i class="fa-regular fa-envelope absolute top-[14px] right-[14px] text-[#9C9EA6]"></i>    
        </div>

    </div>
</section>
