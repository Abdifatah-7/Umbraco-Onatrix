@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using UmbracoProject1.ViewModels;  
@{
    var content = (ContentModels.QuestionFormSection)Model.Content;
}

<div class="max-w-7xl mx-auto px-4 flex flex-col gap-4 pt-6">

    <h2 class="text-[1.375rem] text-primary font-bold">@content.QuestionFormHeadline</h2>
    <div class="flex flex-col gap-4 item-center justify-center">

        <partial name="Partials/Forms/_QuestionForm" model="new QuestionFormViewModel()" />

        @if (TempData["Success"] != null)
        {
            <div class="bg-green-50 text-green-700 p-4 mx-[2rem] mb-4 rounded-md">
                @TempData["Success"]
            </div>
            TempData.Remove("Success");
        }
        else if (TempData["FormError"] != null)
        {
            <div class="bg-red-50 text-red-700 p-4 mx-[2rem] mb-4 rounded-md">
                @TempData["FormError"]
            </div>
            TempData.Remove("FormError");
        }

    </div>

</div>