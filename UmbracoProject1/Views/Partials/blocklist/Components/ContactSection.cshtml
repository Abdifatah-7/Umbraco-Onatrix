@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.ContactSection)Model.Content;

	var rootContent = Umbraco.ContentAtRoot();
	var siteSettings = rootContent.OfType<ContentModels.SiteSettings>().FirstOrDefault();
	var contactAdress = siteSettings?.ContactAddress?.ToString() ?? "Ingen adress angiven";
	var contactPhone = siteSettings?.ContactPhone?.ToString() ?? "Inget telefon-nummer angivet";
	var contactEmail = siteSettings?.ContactEmail?.ToString() ?? "Ingen e-post angiven";
}

<section class="bg-[#F7F7F7] bg-no-repeat my-16">
	<div class="max-w-7xl mx-auto px-4 flex flex-row gap-16 pt-[4rem]">
		<div id="bg-img" class="w-1/2 overflow-hidden">
			@if (content.ContactImage != null)
			{
				<img src="@content.ContactImage?.Url()" />
			}
		</div>
		<div class="flex flex-col justify-center gap-8">
			<h2 class="font-bold text-[var(--clr-primary)] text-[2.5rem] w-2/3">@content.ContactTitle</h2>
			<div>
				<div class="flex flex-row gap-1 items-center">
					<i class="fa-solid fa-location-dot text-[var(--clr-secondary)]"></i>
					<p class="font-semibold text-[var(--clr-primary)]">@content.ContactLocation</p>
				</div>
				<p class="text-body-text pl-[1.5rem]">@contactAdress</p>
			</div>
			<div>
				<div class="flex flex-row gap-1 items-center">
					<i class="fa-solid fa-phone text-[var(--clr-secondary)]"></i>
					<p class="font-semibold text-[var(--clr-primary)]">@content.ContactPhone</p>
				</div>
				<p class="text-body-text pl-[1.5rem]">@contactPhone</p>
			</div>
			<div>
				<div class="flex flex-row gap-1 items-center">
					<i class="fa-solid fa-envelope text-[var(--clr-secondary)]"></i>
					<p class="font-semibold text-[var(--clr-primary)]">@content.ContactEmail</p>
				</div>
				<p class="text-body-text pl-[1.5rem]">@contactEmail</p>
			</div>
		</div>
	</div>
</section>