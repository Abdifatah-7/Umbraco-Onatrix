@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.ServiceSection)Model.Content;
    var settings = Model.Settings as ContentModels.ServiceSetting;

    var sectionColor = settings?.ServiceBackgroundColor?.Color ?? "#ffffff";
}


<section class="py-[4rem] bg-[var(@sectionColor)]">
    <div class="container mx-auto px-4">
        <div class="flex flex-col gap-2 items-center">
            @if(settings!.ShowServiceLabel)
            {
              <h2 class="text-[.875rem] text-[var(--clr-secondary)] font-bold uppercase">@content.ServiceLabel</h2>               
            }
            <div class="rte">@Html.Raw(content.ServiceTitle) </div>
        </div>
    </div>

    <div class="mt-5 grid grid-cols-3 gap-4">
        <div class="bg-[var(--clr-neutral)] border-2 border-[var(--clr-white-100)] m-full min-h-[350px] overflow-hidden">
            <a href="#" class="block no-underline">
                <h3 class="p-[1.5rem] font-bold text-[var(--clr-primary)]">Risk Management</h3>
                <img src="/images/image-21-min 1.svg" class="block w-full h-[220px] object-cover">
                <p class="p-[1.5rem]">Dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non </p>
            </a>
        </div>
    </div>
</section>