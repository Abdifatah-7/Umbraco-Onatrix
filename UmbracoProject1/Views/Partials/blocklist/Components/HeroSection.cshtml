@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.HeroSection)Model.Content;
}


<section class="hero relative py-16 md:py-24 lg:py-[7rem]">
    <div class="absolute inset-0">
        @if (content.HeroBgImage != null)
        {
            <img src="@content.HeroBgImage.Url()" class="w-full h-full object-cover" />
        }
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="w-full md:w-8/12 lg:w-7/12 xl:w-5/12 flex flex-col gap-6">
            <h1 class="text-4xl md:text-5xl lg:text-[70px] text-[var(--clr-primary)] font-bold leading-tight">@content.HeroTitle</h1>
            <p class="text-base md:text-lg text-gray-700">@content.HeroText</p>
            @if (content.HeroLink != null)
            {
                <a href="@content.HeroLink.Url" class="bg-[var(--clr-primary)] text-white py-3 px-10 no-underline rounded cursor-pointer self-start font-bold">@content.HeroLink.Name</a>
            }

        </div>
    </div>
</section>