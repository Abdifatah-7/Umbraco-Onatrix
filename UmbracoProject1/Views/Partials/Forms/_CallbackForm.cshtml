@using UmbracoProject1.ViewModels
@model CallbackFormViewModel

@{
    var layoutVariant = ViewData["LayoutVariant"] as string ?? "default";
}

@using (Html.BeginUmbracoForm("HandleCallbackForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "callbackForm" }))
{
    <div class="px-[2rem] @(layoutVariant == "wide" ? "md:flex md:flex-wrap md:justify-between md:gap-6" : "flex flex-col gap-6")">

        
        <div class="@(layoutVariant == "wide" ? "md:w-[48%]" : "w-full")">
            <label asp-for="Name" class="sr-only"></label>
            <input asp-for="Name" type="text"
                   placeholder="@Html.DisplayNameFor(x => x.Name)"
                   class="w-full p-3 italic border border-border focus:ring-2 focus:ring-primary focus:outline-none" />
            <span asp-validation-for="Name"></span>
        </div>

        
        <div class="@(layoutVariant == "wide" ? "md:w-[48%]" : "w-full")">
            <label asp-for="Email" class="sr-only"></label>
            <input asp-for="Email" type="text"
                   placeholder="@Html.DisplayNameFor(x => x.Email)"
                   class="w-full p-3 italic border border-border focus:ring-2 focus:ring-primary focus:outline-none" />
            <span asp-validation-for="Email"></span>
        </div>

      
        <div class="@(layoutVariant == "wide" ? "md:w-[48%]" : "w-full")">
            <label asp-for="Phone" class="sr-only"></label>
            <input asp-for="Phone" type="text"
                   placeholder="@Html.DisplayNameFor(x => x.Phone)"
                   class="w-full p-3 italic border border-border focus:ring-2 focus:ring-primary focus:outline-none" />
            <span asp-validation-for="Phone"></span>
        </div>

     
        <div class="@(layoutVariant == "wide" ? "md:w-[48%]" : "w-full") relative">
            <label asp-for="SelectedOption" class="sr-only"></label>
            <select asp-for="SelectedOption"
                    class="appearance-none w-full p-3 pr-10 border border-border focus:ring-2 focus:ring-primary focus:outline-none">
                <option value="" disabled hidden selected>Please select an option</option>


                <option value="Financial Consulting">Financial Consulting</option>
					<option value="Business">Business</option>
					<option value="Tax Planning">Tax Planning</option> 

            </select>
            <span class="pointer-events-none absolute right-3 inset-y-0 flex items-center">
                <i class="fa-solid fa-angle-down h-4 w-4 text-body-text"></i>
            </span>
            <span asp-validation-for="SelectedOption"></span>
        </div>

       
        <div class="@(layoutVariant == "wide" ? "w-full text-center mt-4" : "pb-[2.5rem]")">
            <button type="submit" class="@(layoutVariant == "wide"? "px-10 py-3 w-auto bg-[#4F5955] text-white": "w-full bg-[#F2EDDC] text-main") text-center py-4 font-bold rounded-md cursor-pointer select-none text-[1.125rem] hover:opacity-90 transition">
            Submit
        </button>

        </div>
    </div>
}
